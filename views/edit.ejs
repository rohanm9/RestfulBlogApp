<% include partials/header %>
    <div class="ui text raised container segment">
        <div class="ui huge header">Edit Blog</div>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input name="blog[title]" type="text" value="<%= blog.title %>" required>
        </div>    
        <div class="field">
            <label>Image</label>
            <input name="blog[image]" type="url" value="<%= blog.image %>" required>
        </div>    
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[description]"><%= blog.description %></textarea>
        </div>        
        <input type="submit" class="ui basic big black button">
        </form>
    </div>
<% include partials/footer %>